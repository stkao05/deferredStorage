{
    "name": "deferred-storage",
    "version": "0.0.1",
    "description": "A key-value storage that enables a performant usage of localStorage with the Background Tasks API",
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.6.1",
        "babelify": "^8.0.0",
        "browserify": "^15.1.0",
        "eslint": "^4.14.0",
        "eslint-config-prettier": "^2.9.0",
        "jasmine-core": "^3.3.0",
        "jest": "^23.6.0",
        "karma": "^3.1.3",
        "karma-browserify": "^6.0.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-jasmine": "^2.0.1",
        "watchify": "^3.11.1"
    },
    "main": "dist/index.umd.js",
    "module": "dist/index.esm.js",
    "scripts": {
        "lint": "eslint ./index.js",
        "build-umd": "BABEL_ENV=umd babel index.js -o dist/index.umd.js",
        "build-esm": "BABEL_ENV=esm babel index.js -o dist/index.esm.js",
        "build": "npm run build-umd && npm run build-esm",
        "test": "karma start --single-run true browser-test/karma.config.js",
        "test-dev": "karma start browser-test/karma.config.js",
        "jest": "jest",
        "jest-dev": "jest --watch"
    },
    "babel": {
        "presets": [
            "env"
        ]
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "env": {
            "browser": true,
            "node": true,
            "jest": true,
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 8,
            "sourceType": "module"
        },
        "rules": {
            "semi": [
                "error",
                "never"
            ]
        }
    },
    "jest": {
        "testPathIgnorePatterns": [
            "./browser-test"
        ]
    },
    "keywords": [
        "indexeddb",
        "Indexed DB",
        "IDB",
        "storage",
        "database"
    ],
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "semi": false,
        "trailingComma": "none",
        "bracketSpacing": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/doist/deferredStorage"
    },
    "author": "Steven Kao",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/doist/deferredStorage/issues"
    },
    "homepage": "https://github.com/doist/deferredStorage#readme",
    "dependencies": {}
}
